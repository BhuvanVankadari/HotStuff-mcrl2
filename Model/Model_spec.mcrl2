                        FaultyLeaderDecide(id, currentView, receivedVoteFrom, prepareQC, preCommitQC, commitQC, 
                                           counterCommand) 
                    <>
                        % Correct message from a new replica, vote is counted
                        FaultyLeaderDecide(id, currentView, receivedVoteFrom <| s, prepareQC, preCommitQC, 

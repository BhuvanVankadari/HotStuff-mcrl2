                        LeaderDecide(id, currentView, receivedVoteFrom, prepareQC, preCommitQC, commitQC, 
                                     counterCommand) 
                    <>
                        % Correct message from a new replica, vote is counted
                        LeaderDecide(id, currentView, receivedVoteFrom <| s, prepareQC, preCommitQC, 
                                     createQC(type(receivedMessage), viewNumber(receivedMessage), node(receivedMessage),
                                     (#receivedVoteFrom + 1)), counterCommand)
                )
